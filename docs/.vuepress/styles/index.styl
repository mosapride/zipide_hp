.custom-img-wrap {
  overflow: hidden;
  position: relative;
}

.custom-img-wrap:before {
  animation: custom-img-wrap 2.5s cubic-bezier(.4, 0, .2, 1) forwards;
  background: #fff;
  bottom: 0;
  content: '';
  left: 0;
  pointer-events: none;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}

@keyframes custom-img-wrap {
  100% {
    transform: translateX(100%);
  }
}

